<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auction_App.Login_Page">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="15">

            <Entry x:Name="UsernameEntry" Placeholder="Username" />

            <Entry x:Name="PasswordEntry" IsPassword="true" Placeholder="Password"/>
            <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="DodgerBlue" TextColor="White" />
            <Button Text="Register" Clicked="register_button" BackgroundColor="DodgerBlue" TextColor="White" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>